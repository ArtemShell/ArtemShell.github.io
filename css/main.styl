@import url('https://fonts.googleapis.com/css2?family=Rubik:ital,wght@0,300;0,400;0,500;0,700;0,900;1,300;1,400;1,500;1,700;1,900&display=swap');
*
	font-family: 'Rubik', sans-serif;
fullScreen()
	height 100vh
	width 100%
header
	padding-top 2rem
	padding-left 8rem
	padding-right 8rem

	.logo
		/* LOGO SETTING */
		font-weight 400 // Тольщина основного текста на лого
		font-size 2.3rem // Размер основного текста на лого

		small_margin = .3rem // Отступы кавычек на лого
		/* ============ */
		a:hover
			text-decoration none
		small
			font-size 1.4rem
			&:first-child
				margin-right small_margin
			&:last-child
				margin-left small_margin

	nav a
		margin-right .6rem
		&.badge
			font-weight 400
			font-size 1rem
		&:last-child
			margin-right 0
		&:hover
			text-decoration none

	&.black
		.logo a, .logo a:hover, nav a
			color black
	&.white
		.logo a, .logo a:hover, nav a
			color white
	nav a.badge
		color white

main section
	&#start
		background-image url("../image/start.png")
		fullScreen()
		text-align center
		h1
			padding-top 38vh
			font-size 4rem
			color white
			font-weight bold
		button
			margin-top 1rem
			a
				color white
				&:hover
					color white
					text-decoration none

	&#portfolio
		fullScreen()
		.title
			text-align center
			padding-top 2rem
			p
				color #007bff
				font-style italic
		.works
			padding-top 3rem
			padding-right .5rem
			.card
				overflow:hidden
				img
					-moz-transition: all .7s ease-out;
					-o-transition: all .7s ease-out;
					-webkit-transition: all .7s ease-out;
					&:hover
						-webkit-transform: scale(1.1);
						-moz-transform: scale(1.1);
						-o-transform: scale(1.1);
			.row
				margin-right 0
	&#contact
		fullScreen()
		padding-left 8rem
		padding-right 8rem
		color white
		background-color hsl(0deg 0% 8%)
		.row
			margin-top 5rem
		h1
			text-align center
			padding-top 2rem
		p
			&.name
				font-size 2rem
			&.phone
				font-size 1rem
		.copyright
			position absolute
			bottom -198vh

main#portfolio_page
	h1
		text-align center
		font-weight 400
		margin-top 6rem
	.create_date
		margin-top 1.7rem
		color #818181
		padding-left 8rem
		i
			font-size 1rem
			font-weight 400
		p
			font-style italic
			font-size .8rem
	.project_task
		padding-left 8rem
